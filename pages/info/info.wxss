/* pages/info/info.wxss */
.info_title_pic {
  width: 100%;
  height: 392rpx;
}
.info_avatar {
  width: 54rpx;
  height: 54rpx;
  border-radius: 54rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.info_date {
  font-size: 30rpx;
  margin-left: 10rpx;
}
.info_title {
  font-size: 34rpx;
  font-weight: 700;
  margin: 10rpx;
}
.info_collection,.info_share {
  width: 76rpx;
  height: 76rpx;
  border-radius: 76rpx;
  margin-left: 20rpx;
}
.parent {
  overflow: hidden;
  position: relative
}
.share {
  float: right;
  margin-right: 30rpx;
}
.line {
  width: 90%;
  height: 1rpx;
  background: #666;
  position: absolute;
  left: 5%;
  top: 38rpx;
  z-index: -1;
}
.info_btn {
  width: 288rpx;
  height: 80rpx;
  background: #dedede;
  display: inline-block;
  border-radius: 10rpx;
  border: 1rpx solid #cccaca;
  text-align: center;
  line-height: 80rpx;
}
.btn {
  text-align: center;
  margin: 20rpx 0rpx;
}
.info_content {
  font-size: 36rpx;
  text-indent:36rpx;
  word-spacing: 10rpx;
  line-height: 60rpx;
  color: #666;
}
.isMusicPlay {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 167rpx;
  margin-top: -20rpx
}